<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LocationFragment">

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textSize="24sp"
            android:textColor="#E8E6E6"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvActiveLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar Ubicación del dispositivo"
            app:layout_constraintTop_toBottomOf="@id/tvLocation"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/rGLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvActiveLocation"
            app:layout_constraintStart_toStartOf="@id/tvActiveLocation">
            <RadioButton
                android:id="@+id/rbActiveLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si" />

            <RadioButton
                android:id="@+id/rbActiveLocation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                app:layout_constraintTop_toBottomOf="@id/rbActiveLocation"
                app:layout_constraintStart_toStartOf="@id/rbActiveLocation" />
        </RadioGroup>



        <TextView
            android:id="@+id/tvMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mapa de Ubicación del dispositivo"
            app:layout_constraintTop_toBottomOf="@id/rGLocation"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMap"
            app:layout_constraintBottom_toTopOf="@+id/nextBtn"
            app:cameraTargetLat="37.422"
            app:cameraTargetLng="-122.084"
            app:cameraZoom="12" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>